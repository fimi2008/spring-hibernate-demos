<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.lionxxw.hibernate.session.onetoone.PersonOne" table="person_one">
		<id name="pid" length="5">
			<generator class="increment"></generator>
		</id>
		<property name="name" length="20"></property>
		<property name="description" length="50"></property>

		<set name="courses" cascade="save-update">
			<!--外键-->
			<key>
				<column name="pid"></column>
			</key>
			<one-to-many class="com.lionxxw.hibernate.session.onetoone.CourseOne"/>
		</set>
	</class>
</hibernate-mapping>